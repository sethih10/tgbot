# ===========================================
# Telegram Forwarder - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# TELEGRAM API CREDENTIALS (Required)
# ===========================================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Your phone number with country code (e.g., +1234567890)
TELEGRAM_PHONE_NUMBER=+1234567890

# Session name (optional, default: telegram_forwarder)
# This creates a file like "telegram_forwarder.session" to persist login
TELEGRAM_SESSION_NAME=telegram_forwarder

# ===========================================
# CHANNEL CONFIGURATION (Required)
# ===========================================
# Source channels to monitor (comma-separated)
# Can be: @username, -100xxxxxxxxx (channel ID), or https://t.me/username
# For private channels: you must be a member and use the channel ID
SOURCE_CHANNELS=@source_channel_1,@source_channel_2

# Destination channel (single channel)
# Can be: @username, -100xxxxxxxxx (channel ID), or https://t.me/username
# You must have posting permissions in this channel
DESTINATION_CHANNEL=@your_destination_channel

# Forward mode (optional, default: false)
# true = Forward (shows original sender with "Forwarded from" label)
# false = Copy (posts as your account, no forwarding label)
FORWARD_MODE=false

# ===========================================
# RATE LIMITING (Optional)
# ===========================================
# Delay between messages in seconds (default: 1.0)
MESSAGE_DELAY=1.0

# Multiplier for flood wait errors (default: 1.5)
# If Telegram says wait 60s, we wait 60 * 1.5 = 90s
FLOOD_WAIT_MULTIPLIER=1.5

# Maximum messages per minute (default: 20)
MAX_MESSAGES_PER_MINUTE=20

# ===========================================
# MESSAGE FILTERING (Optional)
# ===========================================
# Keywords to include (comma-separated)
# If set, only messages containing at least one keyword are forwarded
# Leave empty to forward all messages
# Example for apartment/rental hunting:
INCLUDE_KEYWORDS=apartment,flat,rent,renting,rental,room,studio,1bdrm,2bdrm,bedroom,sublet,lease,housing,accommodation,vuokra,asunto

# Keywords to exclude (comma-separated)
# Messages containing any of these keywords are NOT forwarded
EXCLUDE_KEYWORDS=spam,advertisement,scam

# Include media-only messages (default: true)
INCLUDE_MEDIA_ONLY=true

# Minimum message length (default: 0 = no limit)
MIN_MESSAGE_LENGTH=0

# ===========================================
# APPLICATION SETTINGS (Optional)
# ===========================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
